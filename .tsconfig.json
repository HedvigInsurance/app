{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "typeRoots": ["./typings"],
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src"]
}
