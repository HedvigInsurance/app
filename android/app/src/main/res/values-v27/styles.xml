<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Exponent.Light.V27" parent="Theme.Exponent.Light.V23">
        <item name="android:navigationBarColor">@color/off_white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Hedvig.Theme" parent="Theme.Exponent.Light.V27" />

    <style name="Hedvig.Theme.Offer">
        <item name="android:statusBarColor">@color/dark_purple</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="NoTitleBottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="bottomSheetStyle">@style/NoTitleBottomSheet</item>
    </style>

    <style name="PerilBottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="bottomSheetStyle">@style/PerilBottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="TransparentDialog" parent="TransparentDialog.V27" />

    <style name="TransparentDialog.V27" parent="TransparentDialog.V21">
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>