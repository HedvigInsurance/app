<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/peril_icon"
        android:layout_height="@dimen/peril_icon"
        android:layout_gravity="center_horizontal"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        tools:src="@drawable/ic_legal" />

    <TextView
        android:id="@+id/text"
        style="@style/Body.XSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin"
        android:gravity="center_horizontal"
        android:maxWidth="@dimen/peril_width"
        app:autoSizeMaxTextSize="@dimen/text_xsmall"
        app:autoSizeMinTextSize="@dimen/text_xxsmall"
        app:autoSizeTextType="uniform"
        tools:text="Juridisk\ntvist" />

</merge>