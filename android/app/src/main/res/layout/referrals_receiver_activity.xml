<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_margin_triple"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin"
            app:srcCompat="@drawable/ic_invite_success" />

        <TextView
            style="@style/Headline.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_double"
            android:gravity="center"
            android:text="@string/REFERRAL_LINK_INVITATION_SCREEN_HEADLINE"
            tools:text="Bonusregn till folket!" />

        <TextView
            style="@style/Body.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin"
            android:gravity="center"
            android:text="@string/REFERRAL_LINK_INVITATION_SCREEN_BODY"
            tools:text="Du har blivit inbjuden av Lucas och kommer få rabatt på 10 kr/mån! Vill du acceptera inbjudan eller fortsätta utan rabatt?" />

        <Button
            android:id="@+id/referralReceiverContinueButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/referral_receiver_continue_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_margin_triple"
            android:background="@drawable/button_primary"
            android:fontFamily="@font/circular_book"
            android:paddingLeft="@dimen/referral_receiver_continue_button_padding_edge"
            android:paddingRight="@dimen/referral_receiver_continue_button_padding_edge"
            android:text="@string/REFERRAL_LINK_INVITATION_SCREEN_BTN_ACCEPT"
            android:textAllCaps="false"
            android:textColor="@color/off_white"
            android:textSize="@dimen/text_medium"
            app:backgroundTint="@color/purple"
            app:layout_constraintBottom_toTopOf="@id/login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:backgroundTint="@color/purple"
            tools:text="Anmäl försenat bagage" />

        <Button
            android:id="@+id/referralReceiverContinueWithoutButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/referral_receiver_continue_without_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_margin_double"
            android:layout_marginBottom="@dimen/base_margin_quadruple"
            android:background="@drawable/button_primary"
            android:fontFamily="@font/circular_book"
            android:paddingLeft="@dimen/referral_receiver_continue_without_button_padding_edge"
            android:paddingRight="@dimen/referral_receiver_continue_without_button_padding_edge"
            android:text="@string/REFERRAL_LINK_INVITATION_SCREEN_BTN_DECLINE"
            android:textAllCaps="false"
            android:textColor="@color/off_black_dark"
            android:textSize="@dimen/text_medium"
            app:backgroundTint="@color/light_gray"
            tools:backgroundTint="@color/light_gray"
            tools:text="Nej, fortsätt utan rabatt" />

    </LinearLayout>
</ScrollView>