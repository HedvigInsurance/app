<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_purple"
    android:paddingTop="@dimen/base_margin_quadruple">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:contentDescription="@null"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sphere" />

    <TextView
        android:id="@+id/grossPremium"
        style="@style/Body.XSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/netPremium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="109 kr/mån"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/netPremium"
        style="@style/Body.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="99"
        tools:textColor="@color/pink" />

    <TextView
        style="@style/Body.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/OFFER_PRICE_PER_MONTH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/netPremium" />

    <FrameLayout
        android:id="@+id/discountBubble"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginStart="@dimen/base_margin_quadruple"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/netPremium"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:contentDescription="@null"
            android:tint="@color/pink"
            app:srcCompat="@drawable/sphere" />

        <TextView
            android:id="@+id/discountTitle"
            style="@style/Body.XSmall.Negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/base_margin_triple"
            android:text="@string/OFFER_SCREEN_FREE_MONTHS_BUBBLE_TITLE"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/discount"
            style="@style/Headline.Medium.Negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/base_margin_half"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            tools:text="3 månader\ngratis!" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
