<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/base_margin_triple"
    android:paddingTop="@dimen/base_margin_double"
    android:paddingEnd="@dimen/base_margin_triple"
    android:paddingBottom="@dimen/peril_bottom_extra_spacing"
    tools:background="@drawable/bottom_sheet_dialog_no_title_fragment_background">

    <TextView
        style="@style/Headline.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin"
        android:text="@string/REFERRAL_PROGRESS_MORE_INFO_HEADLINE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/referralMoreInfoParagraphOne"
        style="@style/Body.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin"
        android:text="@string/REFERRAL_PROGRESS_MORE_INFO_PARAGRAPH_ONE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/perilSubject" />

    <TextView
        style="@style/Body.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin"
        android:text="@string/REFERRAL_PROGRESS_MORE_INFO_PARAGRAPH_TWO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/perilSubject" />

    <Button
        android:id="@+id/referralMoreInfoButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="@dimen/base_margin_double"
        android:background="@drawable/button_primary"
        android:text="@string/REFERRAL_PROGRESS_MORE_INFO_CTA"
        android:textColor="@color/off_black"
        android:theme="@style/HedvigButton"
        app:backgroundTint="@color/light_gray"
        tools:backgroundTint="@color/light_gray"
        tools:visibility="visible" />
</LinearLayout>