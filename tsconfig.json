{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es5", "es2015"],
    "jsx": "react",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./typings", "./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src", "typings"]
}
